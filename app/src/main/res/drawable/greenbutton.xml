<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/wood_medlight" />
            <stroke
                android:width="1dp"
                android:color="@color/wood_medlight" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    
    <item 
    	android:state_enabled="false">
         <shape>
       		 <solid
                android:color="#707D6B" />
            <stroke
                android:width="1dp"
                android:color="#5A5C59" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        
    </item>
    
    
    <item>
        <shape>
            <gradient
                android:startColor="@color/wood_medlight"
                android:endColor="@color/wood_medlight"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/wood_medlight" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>